e asm.cmt.right   = true   # comments right of disassembly
e asm.syntax      = intel  # intel vs att
e asm.lines.out   = true   # jmp/call lines outside screen
e asm.lines.width = 4      # limit to 4 rows
e asm.xrefs       = true   # show xrefs
e asm.functions   = true   # show functions
e asm.bytespace   = true   # separate hex bytes with a space
e bin.demangle    = true   # attempt to import demangled symbols
e bin.strings     = true   # reap strings on startup
e cfg.fortunes    = true   # show fortunes
e dbg.bep         = main   # auto break on main
e hex.pairs       = 16     # 16 rows
e asm.anal        = true   # auto analyze
e asm.slow        = true   # enable intensive/slower analysis
e io.va           = true   # use virtual address layout


# Shows pseudocode in disassembly. Eg mov eax, str.ok = > eax = str.ok
# (not my thing, might be easier to read for some)
# e asm.pseudo = true

# Display stack and register values on top of disasembly view (visual mode)
e cmd.stack = true

# Solarized theme
eco solarized

# Use UTF-8 to show cool arrows that do not look like crap :)
e scr.utf8 = true
